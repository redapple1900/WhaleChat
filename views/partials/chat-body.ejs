<div class="container">
    <div class="row " style="padding-top: 40px;">
        <input id="username" name="user" value="<%= user%>" type="hidden" />
        <input id="roomname" name="room" value="<%= room%>" type="hidden" />
        <div class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3><%= user%>@<%= room%></h3>
                </div>
                <div class="panel-body chatArea" style="height: 900px">
                    <ul class="messages"></ul>
                </div>
                <div class="panel-footer">
                    <div class="input-group">
                        <input type="text" class="form-control inputMessage" placeholder="Enter Message" />
                        <span class="input-group-btn">
                            <button class="btn btn-info" type="button">SEND</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


